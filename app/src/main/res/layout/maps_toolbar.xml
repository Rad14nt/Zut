<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mapsToolbarBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mapsToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_mono_medium"
        android:text="Application"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/mapsToolbarBackground"
        app:layout_constraintEnd_toEndOf="@+id/mapsToolbarBackground"
        app:layout_constraintStart_toStartOf="@+id/mapsToolbarBackground"
        app:layout_constraintTop_toTopOf="@+id/mapsToolbarBackground" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/mapsToolbarBackground"
        app:layout_constraintEnd_toEndOf="@+id/mapsToolbarBackground"
        app:layout_constraintTop_toTopOf="@+id/mapsToolbarBackground"
        app:srcCompat="@drawable/settings_button" />

    <ImageView
        android:id="@+id/btn_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/mapsToolbarBackground"
        app:layout_constraintStart_toStartOf="@+id/mapsToolbarBackground"
        app:layout_constraintTop_toTopOf="@+id/mapsToolbarBackground"
        app:srcCompat="@drawable/info_button" />

</androidx.constraintlayout.widget.ConstraintLayout>